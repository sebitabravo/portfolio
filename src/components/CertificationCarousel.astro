---
/**
 * CertificationCarousel Component
 *
 * Auto-scrolling carousel showing all certifications with logos and names.
 * Features:
 * - Infinite scroll animation
 * - Floating animation (up and down)
 * - Clickable to view PDF certificate
 * - Responsive design
 */

import type { Certification } from '@/types'

interface Props {
  certifications: Certification[]
}

const { certifications } = Astro.props

// Duplicate the array for seamless infinite scroll
const duplicatedCerts = [...certifications, ...certifications]
---

<div class="cert-carousel-container">
  <div class="cert-carousel-wrapper">
    <div class="cert-carousel">
      {duplicatedCerts.map((cert, index) => {
        const { name, organization, logo, pdfUrl } = cert.data

        return (
          <a
            href={pdfUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="cert-item"
            style={`animation-delay: ${(index % certifications.length) * 0.15}s`}
            title={`${name} - ${organization}`}
          >
            {logo ? (
              <div class="cert-logo-wrapper">
                <img src={logo} alt={organization} class="cert-logo" />
              </div>
            ) : (
              <div class="cert-placeholder">
                <svg class="cert-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            )}
            <span class="cert-name">{name}</span>
            <span class="cert-org">{organization}</span>
          </a>
        )
      })}
    </div>
  </div>
</div>

<style>
  .cert-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 2rem 0;

    /* Gradient masks for smooth fade */
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .cert-carousel-wrapper {
    display: flex;
    width: fit-content;
  }

  .cert-carousel {
    display: flex;
    gap: 2rem;
    animation: scroll 60s linear infinite;
  }

  .cert-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    min-width: 160px;
    max-width: 200px;
    padding: 1.5rem 1rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    animation: float 3s ease-in-out infinite;
    text-decoration: none;
    cursor: pointer;
  }

  .cert-item:hover {
    transform: translateY(-8px) scale(1.05);
    border-color: hsl(var(--primary));
    box-shadow: 0 10px 30px -10px hsl(var(--primary) / 0.3);
  }

  .cert-logo-wrapper {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    background: hsl(var(--background));
    padding: 0.5rem;
    transition: transform 0.3s ease;
  }

  .cert-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .cert-placeholder {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    background: linear-gradient(135deg, hsl(var(--primary) / 0.1), hsl(var(--secondary) / 0.1));
    transition: transform 0.3s ease;
  }

  .cert-icon {
    width: 48px;
    height: 48px;
    color: hsl(var(--primary));
  }

  .cert-item:hover .cert-logo-wrapper,
  .cert-item:hover .cert-placeholder {
    transform: scale(1.1) rotate(2deg);
  }

  .cert-name {
    font-size: 0.875rem;
    font-weight: 600;
    text-align: center;
    color: hsl(var(--foreground));
    line-height: 1.3;
  }

  .cert-org {
    font-size: 0.75rem;
    font-weight: 500;
    text-align: center;
    color: hsl(var(--muted-foreground));
    line-height: 1.2;
  }

  /* Infinite scroll animation */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Floating animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Pause animation on hover */
  .cert-carousel-container:hover .cert-carousel {
    animation-play-state: paused;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .cert-carousel {
      gap: 1.5rem;
      animation-duration: 45s;
    }

    .cert-item {
      min-width: 140px;
      max-width: 160px;
      padding: 1rem 0.75rem;
    }

    .cert-logo-wrapper,
    .cert-placeholder {
      width: 64px;
      height: 64px;
    }

    .cert-icon {
      width: 40px;
      height: 40px;
    }

    .cert-name {
      font-size: 0.8rem;
    }

    .cert-org {
      font-size: 0.7rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .cert-carousel {
      animation: none;
    }

    .cert-item {
      animation: none;
    }
  }
</style>
