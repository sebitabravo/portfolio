---
interface Props {
  value: string;
  class?: string;
}

const { value, class: className = '' } = Astro.props;
---

<div
  class={`tabs-content mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 ${className}`}
  data-value={value}
  style="display: none;"
>
  <slot />
</div>
