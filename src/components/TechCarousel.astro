---
/**
 * TechCarousel Component
 *
 * Auto-scrolling carousel showing all technologies with icons and names.
 * Features:
 * - Infinite scroll animation
 * - Floating animation (up and down)
 * - Responsive design
 */

import { technologies } from '@/data/technologies'
import { techIconsMap } from '@/lib/tech-icons-map'

// Duplicate the array for seamless infinite scroll
const duplicatedTechs = [...technologies, ...technologies]
---

<div class="tech-carousel-container">
  <div class="tech-carousel-wrapper">
    <div class="tech-carousel">
      {duplicatedTechs.map((tech, index) => {
        const IconComponent = techIconsMap[tech.name as keyof typeof techIconsMap]

        return (
          <div
            class="tech-item"
            style={`animation-delay: ${(index % technologies.length) * 0.1}s`}
          >
            <span class="tech-icon">
              {IconComponent ? (
                <IconComponent class="w-10 h-10" />
              ) : (
                <span class="text-4xl">{tech.icon}</span>
              )}
            </span>
            <span class="tech-name">{tech.name}</span>
          </div>
        )
      })}
    </div>
  </div>
</div>

<style>
  .tech-carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 2rem 0;

    /* Gradient masks for smooth fade */
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .tech-carousel-wrapper {
    display: flex;
    width: fit-content;
  }

  .tech-carousel {
    display: flex;
    gap: 2rem;
    animation: scroll 40s linear infinite;
  }

  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    min-width: 100px;
    padding: 1rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    animation: float 3s ease-in-out infinite;
  }

  .tech-item:hover {
    transform: translateY(-8px) scale(1.05);
    border-color: hsl(var(--primary));
    box-shadow: 0 10px 30px -10px hsl(var(--primary) / 0.3);
  }

  .tech-icon {
    font-size: 2.5rem;
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
  }

  .tech-item:hover .tech-icon {
    transform: scale(1.2) rotate(5deg);
  }

  .tech-name {
    font-size: 0.875rem;
    font-weight: 600;
    text-align: center;
    color: hsl(var(--foreground));
  }

  /* Infinite scroll animation */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Floating animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Pause animation on hover */
  .tech-carousel-container:hover .tech-carousel {
    animation-play-state: paused;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .tech-carousel {
      gap: 1.5rem;
      animation-duration: 30s;
    }

    .tech-item {
      min-width: 80px;
      padding: 0.75rem;
    }

    .tech-icon {
      font-size: 2rem;
    }

    .tech-name {
      font-size: 0.75rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .tech-carousel {
      animation: none;
    }

    .tech-item {
      animation: none;
    }
  }
</style>
