---
import { cn } from '@/lib/utils'

interface Props {
  title: string
  subtitle?: string
  align?: 'left' | 'center' | 'right'
  class?: string
}

const {
  title,
  subtitle,
  align = 'center',
  class: className,
  ...rest
} = Astro.props

const alignments = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
}

const classes = cn(
  'mb-8 sm:mb-12 md:mb-16',
  alignments[align],
  className
)
---

<div class={classes} {...rest}>
  <h2 class="text-2xl xs:text-3xl sm:text-4xl lg:text-5xl font-bold mb-3 sm:mb-4 leading-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="text-base sm:text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto px-4 sm:px-0">
      {subtitle}
    </p>
  )}
</div>
