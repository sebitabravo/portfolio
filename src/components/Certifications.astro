---
// Certifications Component
import { getCertifications, type Locale } from "@/lib/data"
import CertificationCarousel from "@/components/CertificationCarousel.astro"

interface Props {
  locale?: Locale
}

const { locale = 'es' } = Astro.props
const certifications = getCertifications(locale)

// Convert certifications to the format expected by CertificationCarousel
const certificationsForCarousel = certifications.map(cert => ({
  data: {
    name: cert.name,
    organization: cert.organization,
    logo: undefined, // You can add logos later if needed
    pdfUrl: cert.pdfUrl || cert.credentialUrl || '#'
  }
}))
---

<div>
  <CertificationCarousel certifications={certificationsForCarousel} />
</div>
