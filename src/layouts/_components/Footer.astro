---
import { siteConfig } from '@/lib/config'
import Container from '@/shared/components/Container.astro'
import { getTranslations, type Locale, getLocaleFromUrl } from '@/lib/i18n'

const locale = getLocaleFromUrl(Astro.url)
const t = getTranslations(locale)
const currentYear = new Date().getFullYear()
---

<footer class="relative border-t border-neutral-200 dark:border-neutral-800 bg-gradient-to-b from-white to-neutral-50 dark:from-neutral-950 dark:to-neutral-900/50 overflow-hidden">
  <!-- Decorative background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 via-transparent to-secondary-50/50 dark:from-primary-950/20 dark:via-transparent dark:to-secondary-950/20 pointer-events-none"></div>

  <Container>
    <div class="relative py-10 sm:py-12 md:py-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 md:gap-12">
        <!-- About -->
        <div class="space-y-3 sm:space-y-4">
          <h3 class="text-base sm:text-lg font-bold text-gradient">{siteConfig.name}</h3>
          <p class="text-xs sm:text-sm text-muted-foreground leading-relaxed">
            {siteConfig.description}
          </p>
          <div class="pt-2">
            <a
              href={`mailto:${siteConfig.email}`}
              class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-primary-600 dark:hover:text-primary-400 transition-colors no-underline"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {siteConfig.email}
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="text-base sm:text-lg font-bold mb-3 sm:mb-4">{t.footer.quickLinks}</h3>
          <ul class="space-y-2 sm:space-y-3">
            <li>
              <a href="/" class="group inline-flex items-center text-sm text-muted-foreground hover:text-primary-600 dark:hover:text-primary-400 no-underline transition-all">
                <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                Home
              </a>
            </li>
            <li>
              <a href="/projects" class="group inline-flex items-center text-sm text-muted-foreground hover:text-primary-600 dark:hover:text-primary-400 no-underline transition-all">
                <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                Projects
              </a>
            </li>
            <li>
              <a href="/#about" class="group inline-flex items-center text-sm text-muted-foreground hover:text-primary-600 dark:hover:text-primary-400 no-underline transition-all">
                <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                About
              </a>
            </li>
            <li>
              <a href="/#experience" class="group inline-flex items-center text-sm text-muted-foreground hover:text-primary-600 dark:hover:text-primary-400 no-underline transition-all">
                <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                Experience
              </a>
            </li>
          </ul>
        </div>

        <!-- Social -->
        <div>
          <h3 class="text-base sm:text-lg font-bold mb-3 sm:mb-4">{t.footer.connect}</h3>
          <div class="flex gap-2 sm:gap-3">
            {siteConfig.social.github && (
              <a
                href={siteConfig.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="group p-3 bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-lg hover:border-primary-500 dark:hover:border-primary-500 hover:scale-110 transition-all no-underline"
                aria-label="GitHub"
              >
                <svg class="w-5 h-5 text-foreground group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {siteConfig.social.linkedin && (
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="group p-3 bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-lg hover:border-primary-500 dark:hover:border-primary-500 hover:scale-110 transition-all no-underline"
                aria-label="LinkedIn"
              >
                <svg class="w-5 h-5 text-foreground group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {siteConfig.email && (
              <a
                href={`mailto:${siteConfig.email}`}
                class="group p-3 bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-lg hover:border-primary-500 dark:hover:border-primary-500 hover:scale-110 transition-all no-underline"
                aria-label="Email"
              >
                <svg class="w-5 h-5 text-foreground group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-neutral-200 dark:border-neutral-800">
        <div class="flex flex-col md:flex-row items-center justify-between gap-3 sm:gap-4">
          <p class="text-xs sm:text-sm text-muted-foreground text-center md:text-left">
            © {currentYear} {siteConfig.name}. {t.footer.allRights}.
          </p>
          <p class="text-xs sm:text-sm text-muted-foreground text-center md:text-right">
            {t.footer.builtWith} <span class="text-red-500">♥</span> using <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-foreground hover:text-primary-600 dark:hover:text-primary-400 transition-colors font-medium">Astro</a> & <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-foreground hover:text-primary-600 dark:hover:text-primary-400 transition-colors font-medium">Tailwind CSS</a>
          </p>
        </div>
      </div>
    </div>
  </Container>
</footer>
