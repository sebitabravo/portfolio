---
interface Props {
  class?: string
  delay?: number
}

const { class: className = '', delay = 0 } = Astro.props
---

<div
  class:list={['fade-in-wrapper', className]}
  data-delay={delay}
  style={`animation-delay: ${delay}ms`}
>
  <slot />
</div>

<style>
  .fade-in-wrapper {
    animation: fade-in 0.6s ease-out forwards;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Respect user's motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .fade-in-wrapper {
      animation: none;
      opacity: 1;
    }
  }
</style>
