---
interface Props {
  variant?: 'default' | 'destructive';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  default: 'bg-background text-foreground',
  destructive: 'border-destructive/50 text-destructive dark:border-destructive [&>svg]:text-destructive',
};
---

<div
  class={`relative w-full rounded-lg border p-4 [&>svg~*]:pl-7 [&>svg+div]:translate-y-[-3px] [&>svg]:absolute [&>svg]:left-4 [&>svg]:top-4 [&>svg]:text-foreground ${variantClasses[variant]} ${className}`}
  role="alert"
>
  <slot />
</div>
