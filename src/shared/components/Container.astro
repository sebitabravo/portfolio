---
import { cn } from '@/lib/utils'

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full'
  class?: string
}

const {
  size = 'lg',
  class: className,
  ...rest
} = Astro.props

const sizes = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-8xl',
  full: 'max-w-full',
}

const classes = cn(
  'mx-auto px-4 sm:px-6 lg:px-8',
  sizes[size],
  className
)
---

<div class={classes} {...rest}>
  <slot />
</div>
